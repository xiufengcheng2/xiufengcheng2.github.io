---
import ClientRouter from "astro/components/ClientRouter.astro"

import "@/styles/font.css"

interface Props {
	title: string
}

const description = "华中师范大学信息管理学院教授，博士生导师，中国科学技术信息研究所博士后，桂子青年学者"

const { title } = Astro.props
---

<script is:inline>
  console.clear()
  console.log("Developed by Xat")
  console.log("https://github.com/xatsh")
</script>

<html lang="zh-Hans">
	<head>
		<meta charset="UTF-8" />
		<meta content="width=device-width, initial-scale=1.0" name="viewport" />
		<meta content={description} name="description" />
		<link href="/fonts/SourceHanSerif/source-han-serif.css" rel="stylesheet" />
		<link href="/favicon.ico" rel="icon" />
		<link href="/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180" />
		<link href="/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png" />
		<link href="/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png" />
		<meta content="数字图书馆与智慧图书馆,信息组织与检索,网络信息行为,推荐系统" name="keywords" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="relative flex items-center justify-center bg-[#F9FAFF]">
		<div class="flex min-h-screen w-[1280px] flex-col">
			<slot />
		</div>
	</body>
</html>

